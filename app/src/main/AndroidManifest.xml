<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sd.www.http"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.sd.www.http.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sd.www.http.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.sd.www.http.activity.DownloadActivity"/>
        <activity android:name="com.sd.www.http.activity.AsyncRequestActivity"/>
        <activity android:name="com.sd.www.http.activity.SyncRequestActivity"/>

    </application>

</manifest>